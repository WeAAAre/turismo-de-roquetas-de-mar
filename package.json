{
  "name": "@prismaworks/template-mono-repo",
  "version": "0.0.0",
  "description": "Template for a mono repo for a Prisma projects",
  "homepage": "https://github.com/prismaworks/template-mono-repo",
  "bugs": {
    "url": "https://github.com/prismaworks/template-mono-repo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prismaworks/template-mono-repo.git"
  },
  "license": "UNLICENSED",
  "author": "Carlos Garrido Marin (cgm164)",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rimraf .turbo node_modules",
    "dev": "turbo run dev",
    "format": "prettier --cache --check packages/**/* apps/**/*",
    "format:fix": "prettier --write packages/**/* apps/**/*",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky install",
    "publish:packages": "turbo run build lint && changeset version && changeset publish"
  },
  "prettier": "@prismaworks/style/prettier",
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@prismaworks/style": "0.3.0",
    "eslint": "8.55.0",
    "husky": "8.0.3",
    "prettier": "3.1.0",
    "rimraf": "5.0.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0"
}
